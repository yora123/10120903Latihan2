<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/headerBg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0dp"
        android:background="@drawable/ic_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/HRegister"/>

    <TextView
        android:id="@+id/HRegister"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:text="@string/hregister"
        android:padding="@dimen/_12dp"
        android:drawableStart="@drawable/ic_header_back"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.Roboto.Medium.Body1"
        android:drawablePadding="@dimen/_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/headerBg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2dp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/headerBg"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@id/headerBg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black_default"
        android:hint="@string/username"
        android:textColorHint="@color/black_default"
        android:textColor="@color/black_default"
        android:paddingBottom="@dimen/_18dp"
        />
    <EditText
        android:id="@+id/email"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black_default"
        android:hint="@string/email"
        android:textColorHint="@color/black_default"
        android:textColor="@color/black_default"
        android:paddingBottom="@dimen/_18dp"
        />
    <EditText
        android:id="@+id/phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black_default"
        android:hint="@string/phone"
        android:textColorHint="@color/black_default"
        android:textColor="@color/black_default"
        android:paddingBottom="@dimen/_18dp"
        />
    <RadioGroup
        android:id="@+id/radioGender"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@id/phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/male"
            android:textColor="@color/black_default"
            android:textSize="16sp"
            android:paddingStart="@dimen/_10dp"
            android:layout_marginStart="@dimen/_30dp"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/female"
            android:textColor="@color/black_default"
            android:textSize="16sp"
            android:paddingStart="@dimen/_10dp"
            android:layout_marginStart="@dimen/_110dp"
            />
    </RadioGroup>
    <View
        android:id="@+id/BloodLine"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_1dp"
        android:layout_marginTop="@dimen/_4dp"
        android:background="@color/silver"
        app:layout_constraintEnd_toEndOf="@id/blood"
        app:layout_constraintStart_toStartOf="@id/blood"
        app:layout_constraintTop_toBottomOf="@id/blood" />
    <View
        android:id="@+id/ReshusLine"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_1dp"
        android:layout_marginTop="@dimen/_4dp"
        android:background="@color/silver"
        app:layout_constraintEnd_toEndOf="@id/reshus"
        app:layout_constraintStart_toStartOf="@id/reshus"
        app:layout_constraintTop_toBottomOf="@id/reshus" />
    <Spinner
        android:id="@+id/blood"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@id/radioGender"
        app:layout_constraintStart_toStartOf="parent"
        android:entries="@array/Blood"
        />
    <Spinner
        android:id="@+id/reshus"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@id/radioGender"
        app:layout_constraintEnd_toEndOf="parent"
        android:entries="@array/Reshus"
        />
    <EditText
        android:id="@+id/password"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@id/blood"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black_default"
        android:hint="@string/password"
        android:textColorHint="@color/black_default"
        android:textColor="@color/black_default"
        android:paddingBottom="@dimen/_18dp"
        />
    <EditText
        android:id="@+id/repassword"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black_default"
        android:hint="@string/repassword"
        android:textColorHint="@color/black_default"
        android:textColor="@color/black_default"
        android:paddingBottom="@dimen/_18dp"
        />
    <RadioGroup
        android:id="@+id/radioOrg"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@id/repassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal"
            android:textColor="@color/black_default"
            android:textSize="16sp"
            android:paddingStart="@dimen/_10dp"
            android:layout_marginStart="@dimen/_30dp"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/organization"
            android:textColor="@color/black_default"
            android:textSize="@dimen/_16dp"
            android:layout_marginStart="@dimen/_80dp"
            android:paddingStart="@dimen/_10dp"
            />
    </RadioGroup>
    <Spinner
        android:id="@+id/job"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@id/radioOrg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:entries="@array/job"
        />
    <View
        android:id="@+id/JobLine"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_1dp"
        android:layout_marginTop="@dimen/_4dp"
        android:background="@color/silver"
        app:layout_constraintEnd_toEndOf="@id/job"
        app:layout_constraintStart_toStartOf="@id/job"
        app:layout_constraintTop_toBottomOf="@id/job" />
    <EditText
        android:id="@+id/address"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@id/job"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black_default"
        android:hint="@string/address"
        android:textColorHint="@color/black_default"
        android:textColor="@color/black_default"
        android:paddingBottom="@dimen/_18dp"
        />
    <EditText
        android:id="@+id/location"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@id/address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black_default"
        android:hint="@string/location"
        android:textColorHint="@color/black_default"
        android:textColor="@color/black_default"
        android:paddingBottom="18dp"
        android:drawableEnd="@drawable/ic_blood_needed_location"
        />
    <CheckBox
        android:id="@+id/checkboxAgree"
        android:layout_width="@dimen/_16dp"
        android:layout_height="@dimen/_16dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_15dp"
        android:checked="true"
        android:background="@drawable/selector_check_box"
        android:button="@null"
        app:layout_constraintTop_toBottomOf="@id/location"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginStart="@dimen/_30dp"
        app:layout_constraintTop_toBottomOf="@id/location"
        app:layout_constraintStart_toEndOf="@id/checkboxAgree"
        android:hint="@string/agree"
        android:textColorHint="@color/black_default"
        android:textColor="@color/black_default"
        android:textAlignment="center"
        android:textSize="@dimen/_18dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegister"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@id/agree"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"
        app:strokeColor="@color/picton_blue"
        app:strokeWidth="@dimen/_1dp"
        android:text="@string/btnRegister"
        android:textColor="@color/picton_blue"
        android:textSize="16sp"
        android:paddingTop="@dimen/_10dp"
        android:paddingBottom="@dimen/_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_100dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>